<%= form_with model: @order_item, url: order_path  do |f| %>
  <%#= form_with model: @user, url: sign_up_path do |form| %>
  <div class="form-group">
    <%= f.label :food_id %>
    <%= f.collection_select :food_id, @foods, :id, :name %>
  </div>
  <div class="form-group">
    <%= f.label :quantity %>
    <%= f.number_field :quantity, min: 1, max: 10 %>
  </div>
  <%= link_to "Add to Order", order_item_path(food: food, quantity: quantity)%>
  <%= f.submit 'Add to Order', class: 'btn btn-primary' %>
<% end %>